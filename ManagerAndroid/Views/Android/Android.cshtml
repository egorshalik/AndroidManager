@model ManagerAndroid.Models.Android

@{
    ViewBag.Title = Model.Name;
}

<br />
<form asp-controller="Android" asp-action="Index">
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Back" />
    </div>
</form>

<br />
<br />
<h2>Android @Model.Name</h2>
<div>
    <dl class="dl-horizontal">
        <dd>
            @if (Model.Avatar != null)
            {
                <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))" />
            }
        </dd>
        <dt>Reability</dt>
        <dd>@Model.Reability</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>

        <dt>Skills</dt>
        <dd>@Model.Skills</dd>
    </dl>
</div>
