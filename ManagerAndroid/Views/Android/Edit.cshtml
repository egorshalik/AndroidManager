@model ManagerAndroid.Models.AndroidViewModel

@{
    ViewBag.Title = "Edit android";
}

<br />
<form asp-controller="Android" asp-action="Index">
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Back" />
    </div>
</form>

<br />
<br />

<form asp-action="Edit" asp-controller="Android" method="post" enctype="multipart/form-data" asp-route-id="@Model.Id">
    <div asp-validation-summary="ModelOnly"></div>
    <p>
        <label>Name</label>
        <input name="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name"></span>
    </p>

    <p>
        <table class="table">
            <tr><td>Old avatar</td><td>New avatar</td></tr>
            <tr>
                @if (Model.ByteAvatar != null)
                {
                <td><img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ByteAvatar))" /></td>
                }
                else
                {
                    <td></td>
                }
                <td><input name="Avatar" type="file" class="form-control" /></td>
            </tr>
        </table>
    </p>

    <p>
        <label>Skills</label>
        <input name="Skills" class="form-control" value="@Model.Skills" />
    </p>
    <p>
        <input type="submit" value="Edit" />
    </p>
</form>